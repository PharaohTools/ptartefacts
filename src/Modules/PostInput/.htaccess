# DirectorySlash Off
RewriteEngine On
#RewriteRule ^(.*)$ index.php?control=GitServer&action=serve&user=$1&item=$2
RewriteRule ^(?:git|scm)/([a-zA-Z0-9-]+)/(.*)$ index.php?control=GitServer&action=serve&user=$1&item=$2
    AuthType Basic
    AuthName "Git repositories"
    AuthBasicProvider anon
    Anonymous_NoUserID on
    Anonymous_MustGiveEmail off
    Anonymous *

    <RequireAny>
      Require ip 0.0.0.0/255.255.255.255
      Require valid-user
      Require local
    </RequireAny>
SetEnvIf Authorization .+ HTTP_AUTHORIZATION=$0
#SetEnv Authorization HTTP_AUTHORIZATION=$0
#SetEnv no-gzip 1